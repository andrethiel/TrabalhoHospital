@model Prescricao

@{ 
    Atendimento atendimento = ViewBag.atendimento;
}
<form asp-action="CriarPrescricao" asp-controller="Medico" method="post">
    <fieldset>
        <legend>Cadastrar Prescrição</legend>
        <div class="container">
            <div class="row">
                <div class="col-sm-10">
                    @if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count > 0)
                    {

                        <div class="alert alert-danger">
                            <a class="close" data-dismiss="alert">×</a>
                            <h5 class="alert-heading">Atenção</h5>
                            @Html.ValidationSummary(true)
                            <a asp-controller="Atendimento" asp-action="Cadastrar">Abrir atendimento</a>
                        </div>

                    }
                    <div class="form-group">
                        <input class="form-control" value="@ViewBag.Nome" type="text" readonly />
                    </div>
                    <div class="form-group">
                        <input class="form-control" value="@atendimento.Tipo" type="text" readonly />
                    </div>
                    <div class="form-group">
                        <input class="form-control" value="@atendimento.Chegada" type="text" readonly />
                    </div>
                    <div class="form-group">
                        <input class="form-control" value="@atendimento.Sintomas" type="text" readonly />
                    </div>
                    <div class="form-group">
                        <textarea asp-for="TextoPrescricao" class="form-control" rows="3"></textarea>
                    </div>
                </div>
                
                <div class="col-sm-4">
                    <div class="form-group">
                        <input class="btn btn-primary" type="submit" value="Cadastrar" />
                    </div>
                </div>
            </div>
        </div>
    </fieldset>
</form>