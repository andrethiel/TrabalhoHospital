@model Atendimento

<form asp-action="Cadastrar" asp-controller="Atendimento" method="post">
    <fieldset>
        <legend>Cadastrar Atendimento</legend>
        <div class="container">
            <div class="row">
                <div class="col-sm-10">
                    @if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count > 0)
                    {

                        <div class="alert alert-danger">
                            <a class="close" data-dismiss="alert">×</a>
                            <h5 class="alert-heading">Atenção</h5>
                            @Html.ValidationSummary(true)
                        </div>

                    }
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="Nome do Paciente" value="@ViewBag.Nome" readonly />
                    </div>
                    <div class="form-group">
                        <select class="form-control" asp-for="Chegada">
                            <option value="">Chegada</option>
                            <option value="Ambulancia">Ambulancia</option>
                            <option value="Helicoptero">Helicoptero</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <select class="form-control" asp-for="Tipo">
                            <option value="">Tipo de atendimento</option>
                            <option value="Urgencia">Urgencia</option>
                            <option value="Emergencia">Emergencia</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <input class="form-control" asp-for="Sintomas" type="text" placeholder="Sintomas" />
                    </div>
                    <input class="form-control" name="PacienteID" type="text" value="@ViewBag.PacienteID" />


                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <input class="btn btn-primary" type="submit" value="Cadastrar" />
                    </div>
                </div>
            </div>
        </div>
    </fieldset>
</form>