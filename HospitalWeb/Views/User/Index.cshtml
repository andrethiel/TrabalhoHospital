@model UserView
<form asp-action="Index">
    <fieldset>
        <legend>Login</legend>
        <div class="container">
            <div class="row">
                <div class="col-sm-10">
                    @if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count > 0)
                    {

                        <div class="alert alert-danger">
                            <a class="close" data-dismiss="alert">×</a>
                            <h5 class="alert-heading">Atenção</h5>
                            @Html.ValidationSummary(true)
                        </div>

                    }
                    <div class="form-group">
                        <input class="form-control" asp-for="Email" type="email" placeholder="Email" />
                    </div>
                    <div class="form-group">
                        <input class="form-control" id="senha" asp-for="Senha" type="password" placeholder="Senha" />
                    </div>
                    <div class="form-group">
                        <a href="~/User/Cadastro">Cadastrar usuario</a>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <input class="btn btn-primary" type="submit" value="Login" />
                    </div>
                </div>
            </div>
        </div>
    </fieldset>
</form>